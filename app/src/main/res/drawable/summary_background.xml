<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Existing background shape -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E1BEE7" /> <!-- Light purple color -->
        </shape>
    </item>

    <!-- Lightning bolt shape -->
    <item
        android:left="18dp"
        android:top="18dp"
        android:right="18dp"
        android:bottom="18dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-25%"
            android:pivotY="25%">
            <shape android:shape="rectangle">
                <size
                    android:width="100dp"
                    android:height="4dp" />
                <solid android:color="#FF4081" /> <!-- Hot pink color -->
                <corners android:radius="2dp" />
            </shape>
        </rotate>
    </item>

    <!-- Border shape -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
    </item>

</layer-list>
